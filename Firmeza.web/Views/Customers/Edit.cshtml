@model Firmeza.web.Models.ViewModels.Customers.CustomerEditViewModel

@{
    ViewData["Title"] = "Edit Customer: " + Model.Name;
}

<h2 class="text-dark mb-4 border-bottom border-warning pb-2">✏️ Edit Customer: @Model.Name</h2>

<div class="row">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-lg p-4 bg-dark text-white border-warning border-3">
            <div class="card-body">
                
                <form asp-action="Edit" method="post">
                    @Html.AntiForgeryToken()
                    
                    <input type="hidden" asp-for="Id" />
                    
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label text-warning"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Document" class="form-label text-warning"></label>
                        <input asp-for="Document" class="form-control" />
                        <span asp-validation-for="Document" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label text-warning"></label>
                        <input asp-for="Email" class="form-control" type="email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-4">
                        <label asp-for="Phone" class="form-label text-warning"></label>
                        <input asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                        <button type="submit" class="btn btn-warning fw-bold me-md-2">
                            <i class="fas fa-save me-2"></i> Save Changes
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary text-white">
                            <i class="fas fa-arrow-left me-2"></i> Back to List
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}