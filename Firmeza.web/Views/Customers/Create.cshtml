@model Firmeza.web.Models.ViewModels.Customers.CustomerCreateViewModel

@{
    ViewData["Title"] = "Register New Customer";
}

<h2 class="text-dark mb-4 border-bottom border-warning pb-2">âž• Register New Customer and User</h2>

<div class="row">
    <div class="col-md-8 col-lg-7">
        <div class="card shadow-lg p-4 bg-dark text-white border-warning border-3">
            <div class="card-body">
                
                <form asp-action="Create" method="post">
                    @Html.AntiForgeryToken()
                    
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <h5 class="text-warning border-bottom pb-2 mb-3">Personal Data</h5>
                            
                            <div class="mb-3">
                                <label asp-for="Name" class="form-label text-warning"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Document" class="form-label text-warning"></label>
                                <input asp-for="Document" class="form-control" />
                                <span asp-validation-for="Document" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Phone" class="form-label text-warning"></label>
                                <input asp-for="Phone" class="form-control" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <h5 class="text-warning border-bottom pb-2 mb-3">Access Credentials</h5>

                            <div class="mb-3">
                                <label asp-for="Email" class="form-label text-warning"></label>
                                <input asp-for="Email" class="form-control" type="email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            
                            <div class="mb-3">
                                <label asp-for="Password" class="form-label text-warning"></label>
                                <input asp-for="Password" class="form-control" type="password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            
                            <div class="mb-3">
                                <label asp-for="ConfirmPassword" class="form-label text-warning"></label>
                                <input asp-for="ConfirmPassword" class="form-control" type="password" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="d-grid gap-2 d-md-flex justify-content-md-start mt-4">
                        <button type="submit" class="btn btn-warning fw-bold me-md-2">
                            <i class="fas fa-user-plus me-2"></i> Register Customer
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary text-white">
                            <i class="fas fa-arrow-left me-2"></i> Back to List
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}