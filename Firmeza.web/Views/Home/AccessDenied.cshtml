@model dynamic

@{
    ViewData["Title"] = "Access denied";
    Layout = "_Layout";
}

<header>
    <h1 class="text-danger">@ViewData["Title"]</h1>
    <p class="text-danger">You do not have sufficient permissions to access this section.</p>
</header>
<div class="alert alert-warning mt-4" role="alert">
    <h4 class="alert-heading">Access Restricted!</h4>
    <p>This application is intended only for **Administrators** of the Firmeza system. Clients are not allowed access to the management panel.</p>
    <hr>
    <p class="mb-0">If you believe this is an error, please contact technical support.</p>
</div>

<a asp-controller="Home" asp-action="Index" class="btn btn-secondary mt-3">Return to Home Page</a>