@model IEnumerable<Firmeza.Application.DTOs.Sales.SaleIndexViewModel>

@{
    ViewData["Title"] = "Sales Management";
}

<h2 class="text-dark mb-4 border-bottom border-warning pb-2">ðŸ§¾ Sales Management</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<div class="mb-3">
    <a asp-action="Create" class="btn btn-warning fw-bold">
        <i class="fas fa-plus"></i> Register Sale
    </a>
</div>

<table class="table table-dark table-striped table-bordered align-middle shadow">
    <thead class="table-warning text-dark">
        <tr>
            <th>Receipt</th>
            <th>Customer</th>
            <th>Date</th>
            <th>Total</th>
            <th style="width:180px">Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var sale in Model)
    {
        <tr>
            <td>@sale.ReceiptNumber</td>
            <td>@sale.CustomerName</td>
            <td>@sale.SaleDate.ToString("yyyy-MM-dd HH:mm")</td>
            <td>$@sale.Total</td>
            <td>
                <a asp-action="Edit" asp-route-id="@sale.Id" class="btn btn-sm btn-outline-warning me-2">
                    <i class="fas fa-edit"></i> Edit
                </a>

                <a asp-action="DownloadReceipt" asp-route-fileName="@($"Receipt_{sale.ReceiptNumber}.pdf")" 
                   class="btn btn-sm btn-outline-info me-2">
                    <i class="fas fa-file-pdf"></i> PDF
                </a>

                <form asp-action="Delete" asp-route-id="@sale.Id" method="post" 
                      style="display:inline-block">
                    @Html.AntiForgeryToken()
                    <button class="btn btn-sm btn-outline-danger"
                            onclick="return confirm('Are you sure you want to delete this sale?');">
                        <i class="fas fa-trash"></i> Delete
                    </button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
