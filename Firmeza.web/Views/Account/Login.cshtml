@model Firmeza.Application.DTOs.LoginViewModel
@{
    // CRITICAL FIX: Add headers to prevent the browser from caching this page 
    // in the history, solving the 'back button' issue after login.
    Context.Response.Headers["Cache-Control"] = "no-cache, no-store, must-revalidate";
    Context.Response.Headers["Pragma"] = "no-cache";
    Context.Response.Headers["Expires"] = "0";

    Layout = "_Layout"; 
    ViewData["Title"] = "Administrator Log In";
}

<div class="row justify-content-center align-items-center" style="min-height: 80vh;">
    
    <div class="col-lg-5 col-md-8">
        
        <div class="card shadow-lg border-warning border-3 bg-dark text-white">
            
            <div class="card-header bg-warning text-dark text-center py-3">
                <i class="fas fa-hard-hat fa-2x me-2"></i>
                <h4 class="mb-0 fw-bold">FIRMEZA ADMIN ACCESS</h4>
            </div>
            
            <div class="card-body p-5">
                
                <h5 class="card-title text-center text-light mb-4">Enter your credentials to continue</h5>
                
                <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@Model.ReturnUrl" method="post" class="form-horizontal">
                    
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="form-floating mb-4">
                        <input asp-for="Email" class="form-control bg-light text-dark border-0" placeholder="Email" autocomplete="username" />
                        <label asp-for="Email" class="text-dark">Email Address</label>
                        <span asp-validation-for="Email" class="text-warning"></span>
                    </div>
                    
                    <div class="form-floating mb-4">
                        <input asp-for="Password" class="form-control bg-light text-dark border-0" placeholder="Password" autocomplete="current-password" />
                        <label asp-for="Password" class="text-dark">Password</label>
                        <span asp-validation-for="Password" class="text-warning"></span>
                    </div>
                    
                    <div class="mb-4">
                        <div class="form-check">
                            <input asp-for="RememberMe" class="form-check-input bg-warning border-0" type="checkbox" />
                            <label asp-for="RememberMe" class="form-check-label text-light">
                                @Html.DisplayNameFor(m => m.RememberMe)
                            </label>
                        </div>
                    </div>
                    
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-warning btn-lg fw-bold text-dark">
                            <i class="fas fa-sign-in-alt me-2"></i> LOG IN
                        </button>
                    </div>
                </form>
            </div>
        </div>
        <div class="text-center mt-3">
            <a asp-controller="Home" asp-action="Index" class="text-white-50"><i class="fas fa-arrow-left me-1"></i> Back to Homepage</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}