@model Firmeza.Application.DTOs.Products.ProductCreateViewModel

@{
    ViewData["Title"] = "Register New Product";
}

<h2 class="text-dark mb-4 border-bottom border-warning pb-2">âž• Register New Product</h2>

<div class="row">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-lg p-4 bg-dark text-white border-warning border-3">
            <div class="card-body">
                
                <form asp-action="Create" method="post">
                    @Html.AntiForgeryToken()
                    
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label text-warning"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="UnitPrice" class="form-label text-warning"></label>
                        <input asp-for="UnitPrice" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="UnitPrice" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Stock" class="form-label text-warning"></label>
                        <input asp-for="Stock" class="form-control" type="number" />
                        <span asp-validation-for="Stock" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-4">
                        <label asp-for="Description" class="form-label text-warning"></label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                        <button type="submit" class="btn btn-warning fw-bold me-md-2">
                            <i class="fas fa-save me-2"></i> Register Product
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary text-white">
                            <i class="fas fa-arrow-left me-2"></i> Back to List
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}