@using Microsoft.AspNetCore.Identity 
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService 

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Firmeza Dashboard</title>
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
    
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/Firmeza.web.styles.css" asp-append-version="true"/>
</head>
<body>
    
    @{
        // Definir si el usuario es Admin para la lógica de menú
        var isAdmin = User.Identity.IsAuthenticated && (await AuthorizationService.AuthorizeAsync(User, "AdminPolicy"))?.Succeeded == true;
    }
    
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark border-bottom border-warning border-3 box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand text-warning fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-hard-hat me-2"></i> FIRMEZA
                </a>
                
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav">
                        @if (User.Identity!.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <span class="nav-link text-white">
                                    <i class="fas fa-user-circle"></i> @User.Identity.Name
                                </span>
                            </li>
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="form-inline">
                                    <button type="submit" class="nav-link btn btn-link text-warning">
                                        <i class="fas fa-sign-out-alt"></i> Logout
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-warning" asp-controller="Account" asp-action="Login">
                                    <i class="fas fa-sign-in-alt"></i> Login
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <div class="row">

            @if (isAdmin)
            {
                <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-white sidebar collapse border-end">
                    <div class="position-sticky pt-3">
                        <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted text-uppercase">
                            <span>Management Modules</span>
                        </h6>
                        <ul class="nav flex-column">
                            <li class="nav-item">
                                <a class="nav-link text-dark" aria-current="page" asp-controller="Dashboard" asp-action="Index">
                                    <i class="fas fa-tachometer-alt text-warning"></i> Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Products" asp-action="Index">
                                    <i class="fas fa-box-open text-warning"></i> Products
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Customers" asp-action="Index">
                                    <i class="fas fa-users text-warning"></i> Customers
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Sales" asp-action="Index">
                                    <i class="fas fa-shopping-cart text-warning"></i> Sales
                                </a>
                            </li>
                        </ul>
                    </div>
                </nav>
            }


            <main role="main" class="@(isAdmin ? "col-md-9 ms-sm-auto col-lg-10 px-md-4" : "col-12") pb-3">
                @if (isAdmin)
                {
                    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                        <h1 class="h2">@ViewData["Title"]</h1>
                    </div>
                }
                @RenderBody()
            </main>

        </div>
    </div>


    <footer class="border-top footer text-white bg-dark">
        <div class="container-fluid">
            &copy; @DateTime.Now.Year - Firmeza.web - <span class="text-warning">Administrative Application.</span>
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>